{
    "name": "ai-project",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--privileged",
        "--name=ai_container"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "github.copilot",
                "eamodio.gitlens"
            ]
        }
    },
    "mounts": [
        "source=${env:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
        "source=${env:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached"
    ],
    "postCreateCommand": ".devcontainer/install.sh",
    "workspaceFolder": "/workspace",
    "initializeCommand": "docker network inspect share_network >/dev/null 2>&1 || docker network create share_network",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "remoteUser": "root"
}